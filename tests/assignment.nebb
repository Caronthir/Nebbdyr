# Immutable declaration
var ia
# Mutable declaration
mut var ma
# Unstable declarations
unstable mut var uma
unstable var ua

# Immutable assignment
ia := 8

# Mutable assignment and reassignment
ma := 9
ma := 11

# Unstable assignment and type shift
uma := 10
uma := "fish"

print "====ASSIGNMENT===="
print "Immutable is: " + tostring(ia)
print "Mutable is:   " + tostring(ma)
print "Unstable is:  " + tostring(uma)

